name=extension
getContents=:read-children-resources(child-type=extension)
server.preprocess.prepend=/extension

match.addExtension=add:/extension/*
addExtension.rule.1=/extension=${name(.)}/:add(module=${name(.)})
addExtension.rule.2=:reload
